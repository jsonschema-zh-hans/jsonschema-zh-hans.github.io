{
    // 语言
    "title": "JSON schema for cd-express.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type":"object",
    "definitions": {
        "//": {
          "explainer": "https://www.typescriptlang.org/docs/handbook/tsconfig-json.html#overview",
          "reference": "https://www.typescriptlang.org/tsconfig",
          "reference metadata": "https://github.com/microsoft/TypeScript-Website/blob/v2/packages/tsconfig-reference/scripts/tsconfigRules.ts"
        },
        "port":{
          "type":["integer","string"],
          "description": "端口,默认 3000",
          "default":3000
        },
        "static":{
          "type":"object",
          "description": "配置静态资源路由，\"~\" 表示根目录，示例：\n \"~\":[\"./docs\"]\n \"/libs\":[\"/dist/libs\"]",
          "properties": {

          }
        }
    },
    "properties": {
        "port":{"$ref":"#/definitions/port"},
        "static":{"$ref":"#/definitions/static"}
    }
    
  }
  